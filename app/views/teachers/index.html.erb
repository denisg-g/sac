

<h1>Lista Docentes</h1>
<div style='overflow-x: auto;'>

<table class="table table-striped table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Email</th>
      <th>Direction</th>
      <th>Grupo</th>
      <th>Contacto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %> <%= teacher.name1 %></td>
        <td><%= teacher.lastname %> <%= teacher.lastname1 %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.direction %></td>
        <% if teacher.group.present? %>
        <td><%= teacher.group.name %></td>
        <% else %>
        <td>No tiene grupo</td>
        <% end %>

        <td><% teacher.tel_teachers.each do |tel| %>
        <%= tel.tipo %>
        <%= tel.numero %><% end %></td>

        <td><%= link_to teacher,:title=>"Mostrar" do%>
          <span class="fa fa-eye btn btn-default btn-md"></span> <% end %>
        </td>
        <td><%= link_to edit_teacher_path(teacher),:title=>"Editar" do%>
          <span class="fa fa-pencil-square-o btn btn-default btn-md"></span> <% end %></td>
        <td><%= link_to teacher, method: :delete,:title=>"Eliminar", data: { confirm: '¿Estás seguro?' } do  %><span class="fa fa-trash btn-default btn btn-md"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<br>

<%= link_to 'Nuevo Docente', new_teacher_path,:class=>'btn btn-sm' %>
<% unless request.format.to_sym == :pdf %>
    <%= link_to 'Imprimir PDF', {format: :pdf}, :class => 'fa fa-print btn btn-sm' %>
<% end %>
<%= link_to 'Imprimir Excel', {format: :xls}, :class => 'fa fa-file-excel-o  btnexcel btn-sm '%>
