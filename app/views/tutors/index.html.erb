

<h1>Padres de Familia</h1>

<%= link_to '', new_tutor_path,:class=>"btn btn-default fa fa-plus",:style=>"position:absolute;left:54em;top:1em;",:title=>"Nuevo Tutor"%>
<%= paginate(@tutors) %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombres </th>
      <th>Apellidos</th>
      <th>Parentesco</th>
      <th>Email</th>
      <th>Direction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutors.each do |tutor| %>
      <tr>
        <td><%= tutor.first %> <%= tutor.second %></td>
        <td><%= tutor.apellido %> <%= tutor.apellido1 %></td>
        <td><%= tutor.tipotutor %></td>
        <td><%= tutor.email %></td>
        <td><%= tutor.direction %></td>
        <td><%= link_to tutor,:title=>"Mostrar" do%>
          <span class="fa fa-eye btn btn-default btn-md"></span> <% end %>
        </td>
        <td><%= link_to edit_tutor_path(tutor),:title=>"Editar" do%>
          <span class="fa fa-pencil-square-o btn btn-default btn-md"></span> <% end %></td>
        <td><%= link_to tutor, method: :delete,:title=>"Eliminar", data: { confirm: '¿Estás seguro?' } do  %><span class="fa fa-trash btn-default btn btn-md"></span>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<a href="javascript:history.back()" class="btn btn-default btn-md" style="top:;position:relative;">Atrás</a>