<%= form_for(@tutor,:html=>{:style=>"overflow:auto;"}) do |f| %>


  <div class="field col-md-4">
    <%= f.label :tipo_id %><br>
    <%= f.select :tipo_id,(["Cedula","Pasaporte"]),{}, {:class=> "form-control",:style=>"float:left" }%>
  </div>
  <%= f.label :nombres %><br>
  <div class="input-group">
    <%= f.text_field :first,:class=>"form-control col-md-3" ,:placeholder=>"Primer Nombre",:autofocus=>"true"%><span class="input-group-btn" style="width:0px;"></span>
    <%= f.text_field :second,:class=>"form-control col-md-3",:style=>"margin-left:-2px",:placeholder=>"Segundo Nombre" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :cedula %><br>
    <%= f.text_field :cedula ,:class=>"form-control col-md-3" ,:placeholder=>"001-190394-0034T"%>
  </div>

  <%= f.label :Apellidos %><br>
  <div class="input-group">
    <%= f.text_field :apellido,:class=>"form-control col-md-3" ,:placeholder=>"Primer Apellido"%><span class="input-group-btn" style="width:0px;"></span>
    <%= f.text_field :apellido1,:class=>"form-control col-md-3",:style=>"margin-left:-2px",:placeholder=>"Segundo Apellido" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :Parentesco %><br>
    <%= f.select :tipotutor,(["Abuelo","Hermano(a)","Madre","Padre","Tio(a)"]),{}, {:class=> "form-control",:style=>"float:left" }%>
  </div>
  <div class="field col-md-3" style="padding-left: 0;">
    <%= f.label :email %><br>
    <%= f.text_field :email,:class=>"form-control col-md-3",:style=>"margin-left:-2px",:placeholder=>"persona@ejemplo.com" %>
  </div>
  <div class="field" style="width:207px;float:left;">
    <%= f.label :direcciÃ³n %><br>
    <%= f.text_area :direction,:class=>"form-control ",:style=>"margin-left:-2px;",:placeholder=>"Segundo Nombre" %>
  </div>
  <div class="field hidden " >
    <%= f.text_area :student,:class=>"form-control col-md-3 ",:style=>"margin-left:-2px;",:value=>params[:id_student] %>
    
  </div>
