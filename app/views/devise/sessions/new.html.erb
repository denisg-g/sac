

    <% if !user_signed_in? %>
       <%= image_tag "logocolegio.png", :style=>"width:200px;margin:1em 0 0 2em;" %>
       
    <% end %>

<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Por favor iniciar sesión</h3>
                    </div>
                    <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true ,placeholder:"E-mail" , :class=>"form-control"%>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password,:class =>"form-control",placeholder:"Contraseña", autocomplete: "off" %>
                    </div>

                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :Recordar %>
                      </div>
                    <% end -%>

                    <div class="actions">
                      <%= f.submit "Ingresar", class:"btn btn-lg btn-success btn-block" %>
                    </div>
                  <% end %>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>


